<Window x:Class="WpfApplication.UserManagement.UserListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Users" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <ToolBar>
            <Button Content="New Group"/>
        </ToolBar>
        <DataGrid Name="UserList" RowEditEnding="UserList_RowEditEnding" AutoGenerateColumns="False" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Name}" Width="*" />
                <DataGridComboBoxColumn Header="Group" SelectedValueBinding="{Binding Name}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
