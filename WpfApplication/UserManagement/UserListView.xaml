<Window x:Class="WpfApplication.UserManagement.UserListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserListView" Height="300" Width="300">
    <StackPanel>
        <ToolBar>
            <Button Content="New Group"/>
        </ToolBar>
        <DataGrid AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Width="*" />
                <DataGridComboBoxColumn Header="Group" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
